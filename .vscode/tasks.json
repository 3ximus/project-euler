{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "python",
			"command": "time ${config:python.pythonPath} ${file}",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "python -interactive",
			"command": "ipython -i ${file}",
			"type": "shell",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}